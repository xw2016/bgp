/* pages/works/works.wxss */
@import "../../lib/style/common.wxss";
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}  
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
}  
.navbar .item.active{  
  color: #FFCC00;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #FFCC00;  
} 

.fl text {
  color:#000;
}
.aricle-user-wrap {
  position: relative;
}
.index-poster-name {
  color:#5a85ce;
  font-weight:bold;
  font-size:31rpx;
  font-family: "Microsoft YaHei",Arial;
}
.index-poster-kind {
  background-color: #5bc3ff;
  border-radius: 2px;
  margin-left: 5px;
  height: 130rpx;
  font-size: 22rpx;
  color: #fff;
  font-family: "Microsoft YaHei",Arial;
  vertical-align:1px;
  padding: 0px 5px;
}
.index-post-info {
  font-size:24rpx;
  font-family: "Microsoft YaHei",Arial;
  margin-right: 10px;
  color: #858585;
}